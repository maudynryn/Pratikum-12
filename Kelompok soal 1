#include <iostream>
#include<iomanip>
#include <cstdlib>>

using namespace std;

//Inisialisasi Variabel Matriks A,B,C
int A[3][3];
int B[3][3];
int C[3][3];

//Fungsi Input Matriks A
void isiA ()
{
cout <<"Masukkan Nilai Matriks A :"<<endl;
for(int i=0; i<3; i++)
{
for(int j=0; j<3; j++)
{
cout<<"A "<<"["<<i+1<<"] ["<<j+1<<"] = ";
cin >>A[i][j];
}
cout <<endl;
}
}
//Fungsi Input Matriks B
void isiB ()
{
cout <<"Masukkan Nilai Matriks B :"<<endl;
for(int i=0; i<3; i++)
{
for(int j=0; j<3; j++)
{
cout<<"B "<<"["<<i+1<<"] ["<<j+1<<"] = ";
cin >>B[i][j];
}
cout <<endl;
}
}
//Fungsi Penjumlahan Matriks
void JumlahMatriks()
{
for(int i=0; i<3; i++) //Perulangan pada Baris
{
for(int j=0; j<3; j++) //Perulangan pada Kolom
{
C[i][j]=A[i][j]+B[i][j]; //Penambahan pada setiap Elemen Array
}
}
}
void TampilA()
{
cout <<"Matriks A : "<<endl;
for(int i=0; i<3; i++)
{
for(int j=0; j<3; j++)
{
cout<<setw(4)<<"["<<A[i][j]<<"]";

}
cout <<endl;
}
cout <<endl;
}
void TampilB()
{
cout <<"Matriks B : "<<endl;
for(int i=0; i<3; i++)
{
for(int j=0; j<3; j++)
{
cout<<setw(3)<<"["<<B[i][j]<<"]";
}
cout <<endl;
}
cout <<endl;
}
void TampilC()
{
cout <<"Hasil Penjumlahan Matriks A dan B "<<endl;
cout <<"Matriks C: "<<endl;
for(int i=0; i<3; i++)
{
for(int j=0; j<3; j++)
{
cout<<setw(3)<<"["<<C[i][j]<<"]";
}
cout <<endl;
}
cout <<endl;
}
int main ()
{
isiA();
system("cls");
isiB();
system("cls");
JumlahMatriks();
TampilA();
TampilB();
TampilC();
return 0;
}
